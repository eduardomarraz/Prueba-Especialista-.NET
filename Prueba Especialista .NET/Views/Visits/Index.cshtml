@model IEnumerable<Prueba_Especialista_.NET.Models.Visit>

@{
    ViewData["Title"] = "Listado de Visitas";
}

<h1>Listado de Visitas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Registrar nueva visita</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Fecha</th>
            <th>Cliente</th>
            <th>Comercial</th>
            <th>Notas</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model)
        {
<tr>
                <td>@v.DateVisit.ToShortDateString()</td>
                <td>@v.Client?.Name</td>
                <td>@v.Commercial?.Name</td>
                <td>@v.Notes</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@v.VisitId" class="btn btn-warning">Editar</a> |
                    <a asp-action="Details" asp-route-id="@v.VisitId" class="btn btn-info">Detalles</a> |
                    <form asp-action="Delete" asp-route-id="@v.VisitId" method="post" style="display:inline">
                        <button type="submit" class="btn btn-danger">Borrar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
